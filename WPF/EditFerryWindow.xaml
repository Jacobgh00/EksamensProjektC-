<Window x:Class="WPF.EditFerryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Ferry" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBox x:Name="NameTextBox" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <TextBox x:Name="MaxCarsTextBox" Text="{Binding MaxCars, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <TextBox x:Name="MaxGuestsTextBox" Text="{Binding MaxGuests, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <TextBox x:Name="PricePerGuestTextBox" Text="{Binding PriceGuests, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <TextBox x:Name="PricePerCarTextBox" Text="{Binding PriceCar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <Button Content="Save" Margin="5" Click="SaveFerry_Click"/>
    </StackPanel>
</Window>
