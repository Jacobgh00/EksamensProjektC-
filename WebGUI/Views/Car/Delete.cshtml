@model DTO.Models.CarDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Car - " + Model.LicensePlate;
}

<h2>Delete Car - @Model.LicensePlate</h2>

<h3>Are you sure you want to delete this car?</h3>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>License Plate</dt>
        <dd>@Model.LicensePlate</dd>

        <dt>Passengers</dt>
        <dd>
            @foreach (var passenger in Model.Passengers)
            {
                @passenger.Name<br />
            }
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Car", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CarId)

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Back to List", "Details", "Ferry", new { id = Model.FerryId }, new { @class = "btn btn-default" })
        </div>
    }
    }
 </div>
