@model DTO.Models.CarDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Car";
}

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this car?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Numberplate)</dt>
        <dd>@Html.DisplayFor(model => model.Numberplate)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Car", new { id = Model.CarID }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to Details", "Details", "Ferry", new { id = Model.FerryID }, null)
            </div>
        </div>
    }
</div>
